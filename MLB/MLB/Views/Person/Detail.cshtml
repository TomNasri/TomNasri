<a class="btn btn-outline-info btn-sm" href="/Person">< Back</a>
<br />

<h5>@Html.Raw(Model.Person.Firstname)&nbsp;@Html.Raw(Model.Person.Lastname)</h5>

<table>
    @foreach (var note in Model.Person.ExpenseNotes)
    {
        <tr>
            <td>@Html.Raw(note.Institution)</td>
            <td>@Html.Raw(note.Amount) €</td>
            <td>@Html.Raw(note.Date.ToShortDateString())</td>
            <td><img src="files/@Html.Raw(note.ProofWebPath)" height="30" /> </td>
        </tr>

    }
</table>

<form enctype="multipart/form-data" action="/Person/@Html.Raw(Model.Person.Id)" method="post">
    <input type="text" name="institution" />
    Amount&nbsp;
    <input type="number" name="amount" />
    Date&nbsp;
    <input type="date" name="date" />
    <input type="file" name="file" />
    <i class="fas fa-plus-circle"></i>
    <input type="submit" class="btn btn-outline-success" value="Add" />
</form>
